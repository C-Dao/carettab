{
  "manifest_version": 2,

  "name": "CaretTab v3 Beta",
  "short_name": "CaretTab",
  "description": "__MSG_appDesc__",
  "version": "3.0.0.4",
  "version_name": "3.0.0 Beta 4",
  "default_locale": "en",

  "icons": { "16": "assets/img/icon16-beta.png",
             "48": "assets/img/icon48-beta.png",
            "128": "assets/img/icon128-beta.png" },

  "chrome_url_overrides" : {
    "newtab": "index.html"
  },

  "background": {
    "scripts": ["js/update.js"],
    "persistent": false
  },

  "offline_enabled": true,

  "permissions": [
    "storage",
    "bookmarks",
    "chrome://favicon/",
    "topSites"
  ],

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"

}
